<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shanechapman.android.sessions.app" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.shanechapman.android.sessions.app.login.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.shanechapman.android.sessions.app.home.HomeActivity"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name="com.shanechapman.android.sessions.app.login.RegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name="com.shanechapman.android.sessions.app.session.NewSessionListActivity"
            android:label="@string/title_activity_new_session" >
        </activity>
        <activity
            android:name="com.shanechapman.android.sessions.app.session.SessionsRecordedListActivity"
            android:label="@string/title_activity_sessions_recorded" >
        </activity>
        <activity
            android:name="com.shanechapman.android.sessions.app.session.SessionInProgressActivity"
            android:label="@string/title_activity_session_in_progress" >
        </activity>
        <activity
            android:name="com.shanechapman.android.sessions.app.session.SessionDetailListActivity"
            android:label="@string/title_activity_session_detail_list" >
        </activity>
    </application>

</manifest>
