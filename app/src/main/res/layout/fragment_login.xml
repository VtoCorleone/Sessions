<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:focusableInTouchMode="true">

    <EditText
        android:id="@+id/userName_txt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="25dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:hint="Username"
        android:text="a" />

    <EditText
        android:id="@+id/password_txt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/userName_txt"
        android:hint="Password"
        android:text="b" />

    <TextView
        android:id="@+id/register_success_lbl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/success"
        android:visibility="invisible"
        android:text="@string/register_user_success"
        android:layout_below="@+id/password_txt"/>

    <TextView
        android:id="@+id/err_lbl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/error"
        android:text="@string/err_please_enter_data"
        android:visibility="invisible"
        android:gravity="center"
        android:layout_below="@+id/password_txt"/>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/login_login_btn"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/register_success_lbl"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/register_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_register_btn"
        android:layout_below="@+id/login_btn"
        android:layout_centerHorizontal="true"
        android:background="@color/white" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/sick"
        android:layout_below="@+id/register_btn" />


</RelativeLayout>