<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/new_session_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/new_session"/>

    <TextView
        android:id="@+id/session_completed"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Session successfully completed"
        android:layout_below="@id/new_session_btn"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/list_sessions_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/list_of_sessions"
        android:layout_below="@+id/session_completed"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>